<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="308dp"> <!-- Main content -->


        <!--bottomnavigationbar copy ends here-->


        <Button
            android:id="@+id/infomation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/information"
             />

        <Button
            android:id="@+id/redBox1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:background="@drawable/redBox"
            android:fontFamily="@font/opensans_light"
            android:padding="5dp"
            android:text="Donaton history"
            android:textColor="#ffff"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/redBox2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:background="@drawable/redBox"
            android:fontFamily="@font/opensans_light"
            android:padding="5dp"
            android:text="preparation"
            android:textColor="#ffff"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/redBox3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="330dp"
            android:background="@drawable/redBox"
            android:fontFamily="@font/opensans_light"
            android:padding="5dp"
            android:text="property"
            android:textColor="#ffff"
            android:textSize="30dp">

        </Button>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
